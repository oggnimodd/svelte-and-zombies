    "prettier": "^3.3.3",
    "svelte": "^5.1.3",
    "svelte-check": "^4.0.5",
    "tailwindcss": "^3.4.14",
    "tslib": "^2.8.0",
    "typescript": "~5.6.2",
    "vite": "^5.4.10"
